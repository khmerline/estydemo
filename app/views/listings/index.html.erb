<div class="container">
<br>

  <div class="row">
   <% @listings.each do |listing| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url(:medium)), listing %>
        <div class="caption text-center">
        <%= listing.description %><br>
          <%= "Sold By: #{ listing.user.name }" %><br>
          <%= number_to_currency(listing.price) %><br>
           <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %>
              <%= link_to 'Destroy', listing, class: 'btn btn-link', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </div>
      </div>
    </div>
    <% end %> <br>
  </div>

  <% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
  <% end %>
</div>
<br>
